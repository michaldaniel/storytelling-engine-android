<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="eu.morningbird.storytellingengine">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".view.EndCreditsActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".view.AboutActivity"
            android:parentActivityName=".view.TitleScreenActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".view.ChapterSelectionActivity"
            android:parentActivityName=".view.TitleScreenActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".view.SettingsActivity"
            android:parentActivityName=".view.TitleScreenActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".view.CreditsActivity"
            android:parentActivityName=".view.AboutActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".view.TitleScreenActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.StoryboardActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>